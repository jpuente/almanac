project Ephemeris_Build is

   for Languages use ("Ada");
   for Object_Dir use "obj";
   for Library_Dir use "lib";
   for Library_Name use "ephemeris";
   for Library_Kind use "static";
   for Source_Dirs use ("src");

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnatf", "-g");
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "static");
   end Binder;

   package Builder is
      for Default_Switches ("ada") use ("-g", "-gnatQ");
   end Builder;

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-A1", "-A2", "-A3");
   end Pretty_Printer;

   package IDE is
      for VCS_Kind use "Subversion";
      for VCS_Repository_Root use "https://polaris.dit.upm.es/repos-str/jp/ephemeris/trunk";
   end IDE;

end Ephemeris_Build;
